<div class="dbbody_wrap">
  <div class="addnew_job_con">
    <h1><%= t('page_change_password.change_password')%></h1>
    <div class="addnew_job_box">
      <div class="panel panel-default">

        <div class="panel-body">
          <div class="addjobpopup_box">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>
              <div class="consultant_con">
                <div class="addjob_subbox">
                  <div class="subheading_addjob"></div>
                  <div class="row">
                    <div class="col-sm-6">
                      <div class="form-group">
                        <%= f.label t('page_change_password.current_password')%><i><%= t('page_change_password.your_current_password_to_confirm_your_changes')%></i><br />
                        <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', id: "competence_level" , required: true%>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-6">
                      <div class="form-group">
                        <%= f.label t('page_change_password.password') %><br>
                        <%= f.password_field :password, autocomplete: "off", id: 'password', class: 'form-control', required: true %>
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <%= f.label t('page_change_password.conform_password') %><br>
                        <%= f.password_field :password_confirmation, autocomplete: "off", id: 'password_confirmation', class: 'form-control', required: true %>
                      </div>
                    </div>
                  </div>

                </div>


              </div>
              <div class="modal-footer">
                <%= f.submit 'Save', class: 'btn btn-warning' %>
              </div>
            <%end%>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>





