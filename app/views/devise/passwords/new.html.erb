<div class="dbheader_wrap ">
  <div class="container">
    <div class="dbheader_con ">
      <div class="db_logo"><%= link_to image_tag("db_logo.png", alt: "logo"), root_path, method: :get%></div>
    </div>
  </div>
</div>

<div class="lsu_detail">
  <h3>
    <br><br><br><br><br><br><br>
    <%= t('sign_in_popup.reset_password')%>
  </h3>
  <p><%= t('sign_in_popup.log_in_p')%></p>
</div>
<div class="lsu_form_box">
  <div class="lsu_form">
    <br>
    <div class="form-horizontal">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, "data-toggle" => "validator", role: "form" }) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :email, class: "col-sm-2 control-label" %>
        <div class="col-sm-10" style="width:75%;">
          <%= f.email_field :email, class: "form-control", id: "inputEmail", placeholder: t('sign_up_popup.placeholder.email'),  required: true %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal-footer">
  <%= f.submit t('sign_in_popup.reset_password'), class: "btn btn-primary lsu_btn" %>
</div>
<%end%>
