<!-- =============================================Sign in popup================================================== -->

<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog vertical-align-center" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">&nbsp;</h4>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name),html: {id: "login_box", "data-toggle" => "validator", role: "form"},format: :json, remote: true ) do |f| %>
        <%= devise_error_messages! %>
        <div class="modal-body">
          <div class="lsu_detail">
            <h3>
              <%= t('sign_in_popup.log_in')%>
            </h3>
            <p><%= t('sign_in_popup.log_in_p')%></p>
          </div>
          <div class="lsu_form_box">
            <div class="lsu_lsuoption">
              <br>
              <%= link_to t('sign_in_popup.log_in_facebook'), user_facebook_omniauth_authorize_path, class:"lsu_fb", style:"color: #fff; "%>
              <%= link_to t('sign_in_popup.log_in_linkedin'), user_linkedin_omniauth_authorize_path, class:"lsu_linkedin", style:"color: #fff;" %>
            </div>
            <div class="or_option"><span>-</span> or <span>-</span>
            </div>
            <div class="lsu_form">
              <div class="form-horizontal">

                <div class="form-group">
                  <%= f.label :email, class: "col-sm-2 control-label" %>
                  <div class="col-sm-10">
                    <%= f.email_field :email, class: "form-control", id: "inputEmail", placeholder: t('sign_up_popup.placeholder.email'),  required: true %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label :password, class: "col-sm-2 control-label" %>
                  <div class="col-sm-10">
                    <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "inputPassword3", placeholder: t('sign_up_popup.placeholder.password'), :"data-minlength" => "6",  required: true %>
                    <div class="help-block with-errors"></div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                    <% if devise_mapping.rememberable? -%>
                      <%= f.check_box :remember_me, :style => "margin-top:20px;margin-bottom:20px;" %>
                      <%= f.label t('sign_in_popup.remember_me'), :style => "margin-top:20px;margin-bottom:20px;" %>
                    <% end -%>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                    <label>
                      <%#= link_to t('sign_in_popup.forgot_password'), new_user_password_path %>
                      <a data-toggle="modal" data-target="#forgotPassword"><%= t('sign_in_popup.forgot_password')%></a>
                    </label>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <%= f.submit t('navbar.log_in_with_mail'), class: "btn btn-primary lsu_btn" %>
          </div>
      <%end%>
      </div>
    </div>
  </div>
</div>

<!-- =============================================Sign up popup================================================== -->

<div class="modal fade" id="signup" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog " role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">&nbsp;</h4>
      </div>
      <div class="modal-body">
        <div class="lsu_detail">
          <h3><%= t('sign_up_popup.create_profile')%></h3>
          <p><%= t('sign_up_popup.create_profile_p')%></p>
        </div>
        <div class="lsu_form_box">
          <div class="lsu_lsuoption">
            <br>
            <%= link_to "LOG IN WITH FACEBOOK", user_facebook_omniauth_authorize_path, class:"lsu_fb", style:"color: #fff;"  %>
            <%= link_to "LOG IN WITH LINKEDIN", user_linkedin_omniauth_authorize_path, class:"lsu_linkedin", style:"color: #fff;"  %>
          </div>
          <div class="or_option"><span>-</span> or <span>-</span></div>
          <div class="lsu_form">
            <div class="form-horizontal">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: "sign_up_box", "data-toggle" => "validator", role: "form"},format: :json, remote: true) do |f| %>
                <%= devise_error_messages! %>
                <%= render partial: "shared/registration", locals: {f: f}%>
                <div class="hidden">
                  <%= f.text_field :is_company, value: request.query_string.present?%>
                </div>
                <div class="form-group">
                  <div class="text-center col-sm-12">
                    <p><%= t('sign_up_popup.create_profile_text')%></p>
                    <a data-toggle="modal" data-target="#createProfilePolicy" class="signup_info"><%= t('sign_up_popup.create_profile_text_a')%></a>
                  </div>
                </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Create Profile", class: "btn btn-primary lsu_btn" %>
      </div>
      <%end%>
    </div>
  </div>
</div>

